<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.crazycat.viewapp.activity.MainActivity">

    <Button
        android:layout_gravity="center_horizontal"
        android:onClick="goRadarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="雷达" />
    <Button
        android:layout_gravity="center_horizontal"
        android:onClick="goPieView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="饼状" />
    <Button
        android:layout_gravity="center_horizontal"
        android:onClick="Bezier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贝塞尔曲线" />
    <Button
        android:layout_gravity="center_horizontal"
        android:onClick="Bezier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贝塞尔曲线3阶" />

    <Button
        android:layout_gravity="center_horizontal"
        android:onClick="rool3D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3DCamera" />
    <Button
        android:layout_gravity="center_horizontal"
        android:onClick="Spring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹簧动画" />
    <Button
        android:layout_gravity="center_horizontal"
        android:onClick="rebound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹簧动画2" />
</LinearLayout>
